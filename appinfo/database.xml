<?xml version="1.0" encoding="UTF-8" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>true</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*passman_folders</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>41</length>
			</field>
			<field>
				<name>user_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>title</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>100</length>
			</field>
			<field>
				<name>parent_id</name>
				<type>integer</type>
			</field>
			<field>
				<name>renewal_period</name>
				<type>integer</type>
			</field>
			<field>
				<name>min_pw_strength</name>
				<type>integer</type>
			</field>
			<index>
				<name>folder_id_index</name>
				<field>
					<name>id</name>
				</field>
			</index>
			<index>
				<name>item_user_id_index</name>
				<field>
					<name>user_id</name>
				</field>
			</index>
		</declaration>
	</table>
	
	<table>
		<name>*dbprefix*passman_items</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<autoincrement>1</autoincrement>
				<length>41</length>
			</field>
			<field>
				<name>folderid</name>
				<type>integer</type>
				<default>0</default>
				<length>41</length>
			</field>
			<field>
				<name>user_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>label</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<field>
				<name>description</name>
				<type>clob</type>
			</field>
			<field>
				<name>password</name>
				<type>clob</type>
			</field>
			<field>
				<name>account</name>
				<type>text</type>
				<length>255</length>
			</field>
			<field>
				<name>email</name>
				<type>text</type>
				<length>255</length>
			</field>
			<field>
				<name>url</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<index>
				<name>item_id_index</name>
				<field>
					<name>id</name>
				</field>
			</index>
			<index>
				<name>item_folderid_index</name>
				<field>
					<name>folderid</name>
				</field>
			</index>
			<index>
				<name>item_user_id_index</name>
				<field>
					<name>user_id</name>
				</field>
			</index>
		</declaration>
	</table>
</database>